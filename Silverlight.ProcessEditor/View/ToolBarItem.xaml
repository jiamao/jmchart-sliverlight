<UserControl xmlns:my="clr-namespace:Silverlight.ProcessEditor.Elements"  x:Class="Silverlight.ProcessEditor.View.ToolBarItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myconverter="clr-namespace:Silverlight.ProcessEditor.Converter"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Margin="2,4">
    <UserControl.Resources>
        <ResourceDictionary>
            <myconverter:UnitImageConverter x:Key="unitImageConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" MaxHeight="40">

        <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="ico" Stretch="Fill"  />
        <TextBlock x:Name="txtName" VerticalAlignment="Center" Text="{Binding Path=Name}"></TextBlock>
        
    </StackPanel>
</UserControl>
