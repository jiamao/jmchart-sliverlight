<my:BaseElement xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="Silverlight.ProcessEditor.Elements.Unit" xmlns:my="clr-namespace:Silverlight.ProcessEditor.Elements"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" ToolTipService.ToolTip="{Binding Path=Name}">
    <UserControl.Resources>
        
    </UserControl.Resources>

    <Border  x:Name="statusBorder"
		BorderThickness="2" BorderBrush="Black" CornerRadius="3,3,3,3" VerticalAlignment="Stretch"><!--MouseMove="Grid_MouseMove" MouseLeftButtonUp="Grid_MouseLeftButtonUp" MouseLeave="Grid_MouseLeave"-->
        <Grid x:Name="grid" VerticalAlignment="Stretch" MouseLeftButtonDown="Grid_MouseLeftButtonDown"  Background="#E2E6E9" MouseLeftButtonUp="Grid_MouseLeftButtonUp">    
            <StackPanel Orientation="Vertical">
                <Thumb x:Name="thumb" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                   Margin="0,0" Cursor="Hand" BorderThickness="0" Height="10">
                </Thumb>
                <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="ico" Stretch="Fill"  />
            </StackPanel>
        </Grid>
    </Border>
</my:BaseElement>
